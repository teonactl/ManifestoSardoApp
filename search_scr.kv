<SearchScreen@MDScreen>:
    name :"src_scr"
    id : src_scr
    SearchViewer : 
        viewclass: 'SrCard'  
        orientation: "vertical"
        padding:10, 10
        margin : 20
        #space_x: self.size[0]/3 
        size_hint_y : self.parent.size_hint_y
        id : rvs

        RecycleGridLayout:
            color:(0, 0.7, 0.4, 0.8)
            default_size: None,dp(100)
            default_size_hint: 1, None
            padding : (10,10)
            size_hint_y: None
            height: self.minimum_height
            cols: 1
            spacing: 10


<SrCard>
    #id : card
    style : "elevated"
    shadow_softness: 12
    shadow_offset : (0, 2)
    orientation : "vertical"
    margin : 10
    padding : 10
    line_color : "yellow"
    on_press: app.open_article(root.link, root.title)

    #height : date.height + title.height
    MDLabel:
        id : date
        markup : True

        text:f"[b]{root.date}[/b]"

    MDLabel:
        id : title
        markup : True
        halign: "center"
        text: f"[b][color=c77005]{root.title}[/color][/b]"
 